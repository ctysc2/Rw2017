<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_extra_work"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.home.rw.mvp.ui.activitys.work.ExtraWorkActivity"
    android:background="@color/bac_color_EFEFF4">
    <include layout="@layout/common_toolbar"
        />
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="10dp"
        android:background="@color/widowColor"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_startTime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_startTime"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/startTime"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_startTimeSelect"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_startTime"
                android:text="@string/selectHint"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_A0A0A0"/>
            <ImageView
                android:layout_width="13dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_right_more"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_color_E4E4E4"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:id="@+id/rl_endTime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_endTime"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/endTime"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_endTimeSelect"
                android:layout_toRightOf="@+id/tv_endTime"
                android:text="@string/selectHint"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_A0A0A0"/>
            <ImageView
                android:layout_width="13dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_right_more"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_color_E4E4E4"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:id="@+id/rl_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/extraworkType"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_typeSelect"
                android:layout_toRightOf="@+id/tv_type"
                android:text="@string/selectHint"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_A0A0A0"/>
            <ImageView
                android:layout_width="13dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_right_more"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_color_E4E4E4"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/extraworkDuration"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_duration"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_duration"
                android:hint="@string/durationHint"
                android:textColorHint="@color/text_color_A0A0A0"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textCursorDrawable="@drawable/cursor_color"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/text_color_A0A0A0"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_reason"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:background="@color/widowColor"
        android:layout_above="@+id/rl_update_photo">
        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/reason"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/tv_reason_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/reasonHint"
            android:textColorHint="@color/text_color_A0A0A0"
            android:layout_toRightOf="@+id/tv_reason"
            android:textSize="16sp"
            android:gravity="start"
            android:textCursorDrawable="@drawable/cursor_color"
            android:background="@null"
            android:paddingTop="10dp"
            android:textColor="@color/text_color_A0A0A0"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_update_photo"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/rl_approver">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@color/widowColor">
            <TextView
                android:id="@+id/tv_pic"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/picture"
                android:textSize="16sp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/tv_pic"
                android:gravity="center_vertical">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_taked_picture1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="75dp"
                    android:layout_centerVertical="true"
                    fresco:actualImageScaleType="centerCrop"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"/>
            </LinearLayout>


        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_update_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_update_photo"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_approver"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/widowColor"
        android:layout_above="@+id/rl_bottom_parent">
    <TextView
        android:id="@+id/tv_approver"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="@string/approver"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_approver_header"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_approver"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/test_header"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/tv_approver_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:text="杜拉拉"
        android:layout_toRightOf="@+id/iv_approver_header"/>
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/rl_bottom_parent"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/bac_color_EFEFF4"
    android:layout_alignParentBottom="true">
    <RelativeLayout
        android:id="@+id/rl_bottom_commit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <Button
            android:id="@+id/bt_commit"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/widowColor"
            android:textSize="16sp"
            android:text="@string/commit"
            android:background="@drawable/shape_extrawork_commit"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_bottom_approve"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <Button
            android:id="@+id/bt_refused"
            android:layout_width="155dp"
            android:textColor="@color/text_color_373737"
            android:layout_height="40dp"
            android:text="@string/disagree"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_extrawork_refuse"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/bt_passed"
            android:layout_width="155dp"
            android:layout_height="40dp"
            android:textColor="@color/widowColor"
            android:text="@string/pass"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_extrawork_agree"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>
