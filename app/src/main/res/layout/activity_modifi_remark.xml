<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modifi_remark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bac_color_EFEFF4"
    tools:context="com.home.rw.mvp.ui.activitys.message.ModifiRemarkActivity">
    <include layout="@layout/common_toolbar"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:text="@string/remarkName"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color_919191"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/widowColor"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/et1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:background="@null"
            android:textColorHint="@color/text_color_8B8B8B"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_delete_psw"
          />
    </LinearLayout>
</LinearLayout>
