<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_layoutbac">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_header"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/icon_empty_head"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="分享小秘"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:layout_toRightOf="@+id/tv_name">
        <RelativeLayout
            android:id="@+id/rl_zanContainer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/iv_zan"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_zaned"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_zan_num"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:text="1"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            android:textColor="@color/text_color_999999"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_facus"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:textColor="@color/widowColor"
            android:text="@string/addFacus"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_facus_bac"
            />
        </LinearLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color_E4E4E4"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:lineSpacingExtra="3dp"
        android:maxLines="8"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:ellipsize="end"
        android:textSize="15sp"
        android:textColor="@color/text_color_434343"/>
    <LinearLayout
        android:id="@+id/ll_imgContainer"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="65dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_picture1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            fresco:roundedCornerRadius="5dp"
            fresco:actualImageScaleType="centerCrop"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_picture2"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            fresco:roundedCornerRadius="5dp"
            fresco:actualImageScaleType="centerCrop"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_picture3"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:visibility="visible"
            fresco:roundedCornerRadius="5dp"
            fresco:actualImageScaleType="centerCrop"
            />
    </LinearLayout>
</LinearLayout>