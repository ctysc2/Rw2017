<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/bac_color_EFEFF4"
    tools:context="com.home.rw.mvp.ui.activitys.work.CardActivity">
    <include layout="@layout/common_toolbar"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_header"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/icon_empty_head"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="李婷婷"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="180dp">
        <TextView
            android:id="@+id/time1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="09:00"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_9E9F9F"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time1"
            android:gravity="center"
            android:text="@string/shangban"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color_9E9F9F"/>
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_card_uncheck"
            android:layout_toRightOf="@+id/time1"
            android:layout_alignTop="@+id/time1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/iv1"
            android:background="@drawable/bac_card">
            <TextView
                android:id="@+id/tv_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="2016.12.12"
                android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
            <TextView
                android:id="@+id/tv_checked_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/tv_date1"
                android:text="10:40:27上班打卡"
                android:visibility="invisible"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
            <LinearLayout
                android:id="@+id/ll_address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_checked_time1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="13dp"
                    android:src="@drawable/icon_address"/>
                <TextView

                    android:id="@+id/tv_address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="上海市清涧路68弄33号401室"
                    android:textColor="@color/text_color_9E9F9F"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_card_hint1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_checked_time1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/shangbanCardHint"
                android:textColor="@color/text_color_9E9F9F"/>
            <Button
                android:id="@+id/bt_card1"
                android:layout_width="match_parent"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="25dp"
                android:layout_height="45dp"
                android:text="@string/card"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/selector_card_bac"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="180dp">
        <TextView
            android:id="@+id/time2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="18:30"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_9E9F9F"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time2"
            android:gravity="center"
            android:text="@string/xiaban"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color_9E9F9F"/>
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_card_uncheck"
            android:layout_toRightOf="@+id/time2"
            android:layout_alignTop="@+id/time2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/iv2"
            android:background="@drawable/bac_card">
            <TextView
                android:id="@+id/tv_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="2016.12.12"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/tv_checked_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/tv_date2"
                android:text="10:40:27上班打卡"
                android:visibility="invisible"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
            <LinearLayout
                android:id="@+id/ll_address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_checked_time2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="13dp"
                    android:src="@drawable/icon_address"/>
                <TextView
                    android:id="@+id/tv_address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="上海市清涧路68弄33号401室"
                    android:textColor="@color/text_color_9E9F9F"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_card_hint2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_checked_time2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/xiabanCardHint"
                android:textColor="@color/text_color_9E9F9F"/>
            <Button
                android:id="@+id/bt_card2"
                android:layout_width="match_parent"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="25dp"
                android:layout_height="45dp"
                android:text="@string/card"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/selector_card_bac"/>
        </RelativeLayout>
    </RelativeLayout>
    
</LinearLayout>
