<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_land_mark_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac_color_EFEFF4"
    tools:context="com.home.rw.mvp.ui.activitys.message.LandMarkDetail">
    <include layout="@layout/common_toolbar"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/rl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:text="1.0版本新功能"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:text="09月28日 17:26"
                android:textColor="@color/text_color_919191"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                />
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:lineSpacingExtra="2dp"
                android:textSize="14sp"
                android:textColor="@color/text_color_919191"/>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
