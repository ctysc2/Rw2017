<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/widowColor"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:text="@string/sender"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_sender"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:gravity="center_vertical|right"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_color_666666"/>
</RelativeLayout>
<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/text_color_E4E4E4"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="@string/sendtime"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_send_time"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color_666666"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/text_color_E4E4E4"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="@string/deadline"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_deadline"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_color_666666"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/text_color_E4E4E4"/>
    <RelativeLayout
        android:id="@+id/rl_expand"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="@string/content"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/iv_expand"
            android:layout_width="13dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_down"/>
    </RelativeLayout>
    <View
        android:id="@+id/lastLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/text_color_E4E4E4"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:lineSpacingExtra="4dp"
        android:visibility="gone"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/text_color_878787"/>
</LinearLayout>