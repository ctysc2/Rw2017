<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:id="@+id/toolbar"
android:layout_width="match_parent"
android:background="@drawable/shape_toolbar"
android:layout_height="64dp"
app:contentInsetLeft="0dp"
android:paddingTop="20dp"
app:contentInsetStart="0dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    >
    <ImageButton
        android:id="@+id/back"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:layout_marginLeft="12dp"
        android:background="@color/transparent"/>

    <TextView
        android:id="@+id/midText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="19sp"
        android:textColor="@color/widowColor" />

    <TextView
        android:id="@+id/rightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/widowColor"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/midText"
        android:textSize="15sp"
        android:gravity="center" />
    <TextView
        android:id="@+id/rightTextFacus"
        android:layout_width="65dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="25dp"
        android:gravity="center"/>
    <ImageButton
        android:id="@+id/ib_right"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/icon_center_order"
        android:background="@color/transparent"
        />
      <RelativeLayout
          android:id="@+id/rl_right"
          android:layout_width="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="15dp"
          android:visibility="gone"
          android:layout_height="match_parent">
          <ImageButton
              android:id="@+id/ib_inner_right"
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:visibility="visible"
              android:layout_marginRight="5dp"
              android:layout_centerVertical="true"
              android:scaleType="centerInside"
              android:layout_toLeftOf="@+id/tv_inner_right"
              android:src="@drawable/icon_center_order"
              android:background="@color/transparent"
              />
          <TextView
              android:id="@+id/tv_inner_right"
              android:layout_width="wrap_content"
              android:visibility="visible"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:textColor="@color/bg_white"
              android:layout_height="25dp"
              android:gravity="center"/>
      </RelativeLayout>
</RelativeLayout>
</android.support.v7.widget.Toolbar>