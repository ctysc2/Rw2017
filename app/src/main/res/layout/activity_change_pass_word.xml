<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_pass_word"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac_color_EFEFF4"
    tools:context="com.home.rw.mvp.ui.activitys.mineme.ChangePassWord">
    <include layout="@layout/common_toolbar"
        />
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/widowColor"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_originPsw"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_layoutbac"
            >
            <EditText
                android:id="@+id/et1"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:textSize="16sp"
                android:hint="@string/originPswHint"
                android:paddingLeft="15dp"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/cursor_color"
                android:background="@null"
                android:textColorHint="@color/text_color_8B8B8B"
                android:textColor="@color/text_color_8B8B8B"
                />
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_delete_psw"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_color_E4E4E4"/>
        <RelativeLayout
            android:id="@+id/rl_newPsw"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_layoutbac"
            >
            <EditText
                android:id="@+id/et2"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:hint="@string/newPswHint"
                android:textCursorDrawable="@drawable/cursor_color"
                android:background="@null"
                android:paddingLeft="15dp"
                android:textColorHint="@color/text_color_8B8B8B"
                android:textColor="@color/text_color_8B8B8B"
                />
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_delete_psw"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_color_E4E4E4"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/rl_certainNewPsw"
            android:background="@drawable/selector_layoutbac"
            >
            <EditText
                android:id="@+id/et3"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:hint="@string/certainPswHint"
                android:textCursorDrawable="@drawable/cursor_color"
                android:background="@null"
                android:paddingLeft="15dp"
                android:textColorHint="@color/text_color_8B8B8B"
                android:textColor="@color/text_color_8B8B8B"
                />
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_delete_psw"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_color_E4E4E4"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/ll_top"
        android:gravity="center_vertical|right"
        android:paddingRight="10dp"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:text="123****8900"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/widowColor"
        android:layout_below="@+id/ll_top"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="17sp"
        android:background="@drawable/shape_extra_bac"
        android:text="@string/changeCertain"/>
</RelativeLayout>
