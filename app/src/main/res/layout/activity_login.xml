<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac_login"
    tools:context="com.home.rw.mvp.ui.activitys.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#7C000000"
            android:layout_centerHorizontal="true">
           <ImageView
               android:id="@+id/iv_name"
               android:layout_width="22dp"
               android:layout_height="22dp"
               android:layout_marginLeft="15dp"
               android:src="@drawable/icon_name"
               />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:hint="@string/username"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textColor="@color/bg_white"
                android:textColorHint="#C1C1C1"
                android:background="@null"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:digits="_0123456789abcdefghijgklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_psw"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#7C000000"
            android:layout_below="@+id/ll_name"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/iv_psw"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_psw"
                />
            <EditText
                android:id="@+id/et_psw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textColor="@color/bg_white"
                android:textColorHint="#C1C1C1"
                android:hint="@string/password"
                android:gravity="center_vertical"
                android:textCursorDrawable="@drawable/cursor_color"
                android:background="@null"
                android:singleLine="true"
                android:inputType="textPassword"
                android:digits="0123456789abcdefghijgklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_height="32dp" />
        </LinearLayout>
        <Button
            android:id="@+id/bt_login"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/shape_login"
            android:text="@string/login"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/bt_apply"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_login"
            android:text="@string/applyin"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"/>
    </LinearLayout>

</RelativeLayout>
