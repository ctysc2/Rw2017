<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_extra_work"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.home.rw.mvp.ui.activitys.work.ExtraWorkActivity"
    android:background="@color/bac_color_EFEFF4">
    <include layout="@layout/common_toolbar"
        />
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="13dp"
        android:background="@color/widowColor"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/title"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_duration"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_duration"
                android:hint="@string/selectHint"
                android:textColorHint="@color/text_color_A0A0A0"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textCursorDrawable="@drawable/cursor_color"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/text_color_A0A0A0"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/widowColor"
        android:layout_below="@+id/ll_title">
        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/commDetail"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/commDetailHint"
            android:textColorHint="@color/text_color_A0A0A0"
            android:layout_toRightOf="@+id/tv_detail"
            android:textSize="16sp"
            android:gravity="start"
            android:textCursorDrawable="@drawable/cursor_color"
            android:background="@null"
            android:paddingTop="10dp"
            android:textColor="@color/text_color_A0A0A0"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_update_photo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/rl_detail">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_alignParentBottom="true"
            android:background="@color/widowColor">
            <TextView
                android:id="@+id/tv_pic"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="@string/picture"
                android:textSize="16sp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:id="@+id/ll_pic_line1"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/tv_pic"
                android:gravity="center_vertical">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_taked_picture1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="75dp"
                    android:layout_centerVertical="true"
                    fresco:actualImageScaleType="centerCrop"
                    />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_taked_picture2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="75dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    fresco:actualImageScaleType="centerCrop"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_pic_line2"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/tv_pic"
                android:layout_below="@+id/ll_pic_line1"
                android:gravity="center_vertical">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_taked_picture3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="75dp"
                    android:layout_centerVertical="true"
                    fresco:actualImageScaleType="centerCrop"
                    />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_taked_picture4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="75dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    fresco:actualImageScaleType="centerCrop"
                    />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_update_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_update_photo"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom_parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@color/bac_color_EFEFF4"
        android:layout_below="@+id/rl_update_photo">
        <RelativeLayout
            android:id="@+id/rl_bottom_commit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <Button
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/widowColor"
                android:textSize="16sp"
                android:text="@string/commit"
                android:background="@drawable/shape_extrawork_commit"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
