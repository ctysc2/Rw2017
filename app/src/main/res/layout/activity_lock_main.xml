<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lock_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.home.rw.mvp.ui.activitys.lock.LockMainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:background="@drawable/bac_lock">
        <include layout="@layout/common_toolbar"
            />
        <View
            android:id="@+id/sperate"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_color_9B9B9B"
            android:layout_below="@+id/toolbar"
            />
        <RelativeLayout
            android:layout_below="@+id/sperate"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="80dp"
                android:src="@drawable/bac_lock_inner"/>
            <ImageView
                android:id="@+id/iv_shake"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_shake"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/widowColor"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_help"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:text="@string/help"
            android:paddingTop="25dp"
            android:gravity="center_horizontal"/>

    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_help"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_help"/>

</RelativeLayout>
