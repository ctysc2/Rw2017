<resources>

    <!-- Base application theme.  -->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <!--将ActionBar隐藏,这里使用ToolBar-->
        <item name="windowActionBar">false</item>
        <!-- 使用 API Level 22以上编译的话，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>
        <!--colorPrimaryDark对应状态栏的颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--colorPrimary 对应ToolBar的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--窗口的颜色-->
        <item name="android:windowBackground">@color/widowColor</item>

    </style>

    <style name="loadingPopinStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/loading_popin</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/loading_popout</item>    //退出时的动画
    </style>

    <style name="headerTakerStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/header_taker_popin</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/header_taker_popout</item>    //退出时的动画
    </style>
</resources>
